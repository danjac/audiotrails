{
  "private": true,
  "scripts": {
    "check-updates": "ncu -u",
    "watch-css": "TAILWIND_MODE=build postcss ./static/src/css/app.css -o ./static/dev/app.css",
    "watch-js": "esbuild ./static/src/js/app.js --bundle --outfile=./static/dev/app.js",
    "build": "npm run build-css && npm run build-js",
    "build-css": "NODE_ENV=production postcss ./static/src/css/app.css -o ./static/dist/app.css",
    "build-js": "NODE_ENV=production esbuild ./static/src/js/app.js --bundle --minify --target=chrome58,firefox57,safari11,edge18 --outfile=./static/dist/app.js"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.3.2",
    "autoprefixer": "^10.2.5",
    "cssnano": "^5.0.2",
    "esbuild": "^0.11.16",
    "npm-check-updates": "^11.5.6",
    "postcss": "^8.2.13",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.1",
    "tailwindcss": "^2.1.2"
  },
  "dependencies": {
    "alpinejs": "^2.8.2",
    "htmx.org": "^1.3.3",
    "sortablejs": "^1.13.0"
  }
}
