{
    "private": true,
    "type": "module",
    "scripts": {
        "css:build": "tailwindcss -i ./static/src/app.css -o ./static/dist/app.css --verbose --minify",
        "css:watch": "tailwindcss -i ./static/src/app.css -o ./static/dist/app.css --verbose --watch",
        "js:build": "esbuild ./static/src/**/*.js --bundle --minify --outdir=./static/dist",
        "js:watch": "esbuild ./static/src/**/*.js --bundle --watch --outdir=./static/dist",
        "build": "concurrently \"npm:css:build\" \"npm:js:build\"",
        "watch": "concurrently \"npm:css:watch\" \"npm:js:watch\""
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.9",
        "@tailwindcss/typography": "^0.5.15",
        "concurrently": "^9.0.0",
        "esbuild": "^0.23.1",
        "eslint": "^9.10.0",
        "globals": "^15.9.0",
        "tailwindcss": "^3.4.10"
    }
}
