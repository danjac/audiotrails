{
    "private": true,
    "scripts": {
        "watch:css": "NODE_ENV=production tailwindcss -i ./static/css/app.css -o ./static/dist/bundle.css --minify --watch --verbose",
        "watch:ts": "tsc ./static/js/*.ts --lib dom,es2017 --moduleResolution node --watch --module commonjs",
        "watch:js": "esbuild ./static/js/app.js --watch --bundle --sourcemap --minify-whitespace --minify-syntax --outfile=./static/dist/bundle.js",
        "lint": "eslint './**/*.{ts,tsx}'"
    },
    "dependencies": {
        "alpinejs": "^3.10.2",
        "htmx.org": "^1.7.0"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.2",
        "@tailwindcss/line-clamp": "^0.4.0",
        "@tailwindcss/typography": "^0.5.2",
        "@types/alpinejs": "^3.7.0",
        "esbuild": "^0.14.43",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.1",
        "tailwindcss": "^3.1.3",
        "typescript": "^4.7.3"
    },
   "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
   },
  "lint-staged": {
        "./**/*.{js,jsx,ts,tsx,json,css}": [
      "prettier --write",
      "npm run lint",
      "git add"
    ]
  }
}
