{
  "private": true,
  "scripts": {
    "check-updates": "ncu -u",
    "watch-css": "TAILWIND_MODE=build postcss ./static/src/css/app.css -o ./static/dev/app.css",
    "watch-js": "esbuild ./static/src/js/app.js --bundle --outfile=./static/dev/app.js",
    "build": "yarn build-css && yarn build-js",
    "build-css": "NODE_ENV=production postcss ./static/src/css/app.css -o ./static/dist/app.css",
    "build-js": "NODE_ENV=production esbuild ./static/src/js/app.js --bundle --minify --target=chrome58,firefox57,safari11,edge18 --outfile=./static/dist/app.js"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.2.1",
    "@tailwindcss/jit": "^0.1.5",
    "@types/sortablejs": "^1.10.6",
    "autoprefixer": "^10.2.5",
    "cssnano": "^4.1.10",
    "esbuild": "^0.9.5",
    "npm-check-updates": "^11.3.0",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.0",
    "tailwindcss": "^2.0.4"
  },
  "dependencies": {
    "@hotwired/turbo": "^7.0.0-beta.4",
    "form-request-submit-polyfill": "^2.0.0",
    "sortablejs": "^1.13.0",
    "stimulus": "^2.0.0"
  }
}
