{
  "private": true,
  "scripts": {
    "watch-css": "NODE_ENV=production tailwindcss -i ./assets/css/app.css -o ./assets/bundle.css --minify --watch --verbose",
    "watch-js": "esbuild ./assets/js/app.js --watch --bundle --sourcemap --minify-whitespace --minify-syntax --outfile=./assets/bundle.js",
    "watch": "concurrently npm:watch-css npm:watch-js"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.3.3",
    "autoprefixer": "^10.3.1",
    "concurrently": "^6.2.1",
    "cssnano": "^5.0.7",
    "esbuild": "^0.12.19",
    "tailwindcss": "^2.2.7"
  },
  "dependencies": {
    "alpinejs": "^3.2.3",
    "htmx.org": "^1.5.0",
    "sortablejs": "^1.14.0"
  }
}
