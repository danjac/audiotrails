{
    "private": true,
    "type": "module",
    "scripts": {
        "esbuild:build": "esbuild ./static/src/**/*.js --bundle --minify --outdir=./static/dist",
        "esbuild:watch": "esbuild ./static/src/**/*.js --bundle --watch --outdir=./static/dist",
        "tailwind:build": "tailwindcss -i ./static/src/app.css -o ./static/dist/app.css --verbose --minify",
        "tailwind:watch": "tailwindcss -i ./static/src/app.css -o ./static/dist/app.css --verbose --watch"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.9",
        "@tailwindcss/typography": "^0.5.15",
        "esbuild": "^0.23.1",
        "eslint": "^9.10.0",
        "globals": "^15.9.0",
        "tailwindcss": "^3.4.10"
    }
}
