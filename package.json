{
  "private": true,
  "scripts": {
    "watch-css": "NODE_ENV=production tailwindcss -i ./assets/css/app.css -o ./assets/dist/bundle.css --minify --watch --verbose",
    "watch-js": "esbuild ./assets/js/app.js --watch --bundle --sourcemap --minify-whitespace --minify-syntax --outfile=./assets/dist/bundle.js",
    "watch": "concurrently npm:watch-css npm:watch-js"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.3.4",
    "concurrently": "^6.3.0",
    "esbuild": "^0.13.3",
    "tailwindcss": "^2.2.16"
  },
  "dependencies": {
    "alpinejs": "^3.4.2",
    "htmx.org": "^1.6.0",
    "sortablejs": "^1.14.0"
  }
}
