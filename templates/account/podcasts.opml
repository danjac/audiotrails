<?xml version="1.0" encoding="UTF-8"?>

<opml version="1.0">
	<head>
		<title>Podcasts for {{ user.username }} in {{ request.site.name }}</title>
	</head>
	<body>
		<outline text="My Podcasts" title="My Podcasts">
			{% for subscription in subscriptions %}
            {% with podcast=subscription.podcast %}
			<outline type="rss" text="{{ podcast.cleaned_description|truncatewords:60 }}" title="{{ podcast.title }}" xmlUrl="{{ podcast.rss }}" htmlUrl="{{ podcast.link }}" />
            {% endwith %}
			{% endfor %}
		</outline>
	</body>
</opml>
