<?xml version="1.0" encoding="UTF-8"?>

{% get_site_config as site_config %}

<opml version="1.0">
	<head>
		<title>Podcasts for {{ user.username }} in {{ site_config.site_name }}</title>
	</head>
	<body>
		<outline text="My Podcasts" title="My Podcasts">
			{% for podcast in podcasts %}
			<outline type="rss" text="{{ podcast.cleaned_description|truncatewords:60 }}" title="{{ podcast.title }}" xmlUrl="{{ podcast.rss }}" htmlUrl="{{ podcast.link }}" />
			{% endfor %}
		</outline>
	</body>
</opml>
