@_default:
    @just --list

# Setup the project with default settings
@setup:
    cp -R -u -p hosts.yml.example hosts.yml
    cp -R -u -p vars/settings.yml.example vars/settings.yml

# Run Ansible playbook
@pb playbook *ARGS:
    ansible-playbook -v -i hosts.yml playbooks/{{ playbook }}.yml {{ ARGS }}

# Deploy the project
deploy:
    just pb site

# Upgrade dependencies
upgrade:
    just pb upgrade

# Run Django manage.py commands
dj *ARGS:
    #!/usr/bin/bash
    if [ ! -f "./manage.sh" ]; then
        echo "manage.sh not found, generating it..."
        just pb dj_manage
    fi
    ./manage.sh {{ ARGS }}

# Run Psql commands
psql *ARGS:
    #!/usr/bin/bash
    if [ ! -f "./psql.sh" ]; then
        echo "pql.sh not found, generating it..."
        just pb psql
    fi
    ./psql.sh {{ ARGS }}
