{
  "scripts": {
    "dokku": {
      "predeploy": "python manage.py collectstatic --clear --noinput && python manage.py migrate --noinput"
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    },
    "worker": {
      "quantity": 2
    }
  },
  "cron": [
    {
      "command": "python manage.py schedule_podcast_feeds",
      "schedule": "0 * * * *"
    },
    {
      "command": "python manage.py fetch_new_feeds --limit=1000",
      "schedule": "25 6 * * *"
    },
    {
      "command": "python manage.py fetch_recent_feeds --limit=100",
      "schedule": "30 * * * *"
    },
    {
      "command": "python manage.py send_recommendation_emails",
      "schedule": "12 9 * * 1"
    },
    {
      "command": "python manage.py make_recommendations",
      "schedule": "20 3 * * *"
    },
    {
      "command": "python manage.py clearsessions",
      "schedule": "35 1 * * *"
    }
  ]
}
