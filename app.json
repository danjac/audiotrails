{
    "name": "Radiofeed Dokku deployment",
    "formation": {
        "web": {
            "quantity": 1
        }
    },
    "cron": [
        {
            "command": "python manage.py parse_feeds --limit=360",
            "schedule": "*/6 * * * *"
        },
        {
            "command": "python manage.py parse_itunes",
            "schedule": "15,45 * * * *"
        },
        {
            "command": "python manage.py create_recommendations",
            "schedule": "20 6 * * *"
        },
        {
            "command": "python manage.py send_recommendations_emails",
            "schedule": "20 9 * * 1"
        },
        {
            "command": "python manage.py clearsessions",
            "schedule": "5 6 * * *"
        }
    ]
}
