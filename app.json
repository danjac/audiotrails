{
    "name": "Radiofeed Dokku deployment",
    "addons": [
        "dokku-letsencrypt",
        "dokku-redis",
        "dokku-postgres"
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "radiofeed.settings.production"
    },
   "formation": {
        "web": {
            "quantity": 1
        },
        "worker": {
            "quantity": 1
        }
    },
    "cron": [
        {
          "command": "python manage.py feed_updates",
          "schedule": "*/6 * * * *"
        },
        {
          "command": "python manage.py recommendations",
          "schedule": "15 6 * * *"
        },
        {
          "command": "python manage.py recommendations --email",
          "schedule": "15 9 * * 1"
        },
        {
          "command": "python manage.py crawl_itunes",
          "schedule": "15 3 * * *"
        }
    ]
}
