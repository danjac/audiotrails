{
    "name": "Radiofeed Dokku deployment",
    "addons": [
        "dokku-letsencrypt",
        "dokku-redis",
        "dokku-postgres"
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "radiofeed.settings.production"
    },
  "formation": {
        "web": {
            "quantity": 1
        },
        "worker": {
            "quantity": 2
        }
    },
    "cron": [
        {
          "command": "python manage.py parse_podcast_feeds --limit=120",
          "schedule": "*/6 * * * *"
        },
        {
          "command": "python manage.py create_recommendations",
          "schedule": "15 6 * * *"
        },
        {
          "command": "python manage.py send_recommendation_emails",
          "schedule": "15 9 * * 1"
        },
        {
          "command": "python manage.py send_new_episodes_emails",
          "schedule": "15 9 * * 3"
        }
    ]
}
