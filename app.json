{
    "scripts": {
        "dokku": {
            "predeploy": "python manage.py collectstatic --clear --noinput && python manage.py migrate --noinput"
        }
    },
    "formation": {
        "web": {
            "quantity": 1
        },
        "podping": {
            "quantity": 1
        },
        "worker": {
            "quantity": 2
        }
    },
    "cron": [
        {
            "command": "python manage.py parse_podcast_feeds --since=30 --limit=360",
            "schedule": "*/5 * * * *"
        },
        {
            "command": "python manage.py parse_podcast_feeds --until=30 --limit=100",
            "schedule": "12,48 * * * *"
        },
        {
            "command": "python manage.py send_recommendation_emails",
            "schedule": "12 9 * * 1"
        },
        {
            "command": "python manage.py clear_feed_queue --since=3",
            "schedule": "* */3 * * *"
        },
        {
            "command": "python manage.py make_recommendations",
            "schedule": "20 3 * * *"
        },
        {
            "command": "python manage.py clearsessions",
            "schedule": "35 1 * * *"
        }
    ]
}
