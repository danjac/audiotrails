{
    "scripts": {
        "dokku": {
            "predeploy": "python manage.py collectstatic --clear --noinput && python manage.py migrate --noinput"
        }
    },
    "formation": {
        "web": {
            "quantity": 1
        },
        "worker": {
            "quantity": 2
        }
    },
    "cron": [
        {
            "command": "python manage.py parse_podcast_feeds --primary --limit=300",
            "schedule": "3,16,33,46 * * * *"
        },
        {
            "command": "python manage.py parse_podcast_feeds --queue=feeds:frequent --after=14 --limit=300",
            "schedule": "*/6 * * * *"
        },
        {
            "command": "python manage.py parse_podcast_feeds --queue=feeds:sporadic --before=14 --limit=150",
            "schedule": "13,47 * * * *"
        },
        {
            "command": "python manage.py send_recommendation_emails",
            "schedule": "12 9 * * 1"
        },
        {
            "command": "python manage.py make_recommendations",
            "schedule": "20 3 * * *"
        },
        {
            "command": "python manage.py subscribe",
            "schedule": "*/14 * * * *"
        },
        {
            "command": "python manage.py clearsessions",
            "schedule": "35 1 * * *"
        }
    ]
}
